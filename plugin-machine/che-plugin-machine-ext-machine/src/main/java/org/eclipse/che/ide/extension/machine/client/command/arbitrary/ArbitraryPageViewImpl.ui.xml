<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        @eval InputBackgroundColor org.eclipse.che.ide.api.theme.Style.getInputBackground();
        @eval borderColor org.eclipse.che.ide.api.theme.Style.getTabBorderColor();
        .cmdField {
            background-color: InputBackgroundColor;
            color: #dbdbdb;
            border: 1px solid #191c1e;
            border-radius: 1px;
            box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.19) inset, 0px 1px 0px 0px rgba(223, 223, 223, 0.4);
            font-size: 12px;
            padding-left: 8px;
            width: 400px;
            height: 250px;
            resize: none;
        }

        .commandLinePosition {
            position: relative;
            line-height: 29px;
        }

        .spaceRight {
            margin-right: 8px;
            margin-top: 1px;
        }

        .mainDoc {
            margin: 15px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" debugId="arbitraryPageView-mainPanel" addStyleNames="{style.mainDoc}">
        <g:north size="300">
            <g:FlowPanel width="100%" height="100%">
                <g:Label text="Command line:" addStyleNames="{style.commandLinePosition}"/>
                <g:SimplePanel addStyleNames="{style.spaceRight}">
                    <g:TextArea ui:field="commandLine" debugId="arbitraryPageView-cmdLine" addStyleNames="{style.cmdField}"/>
                </g:SimplePanel>
            </g:FlowPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>
